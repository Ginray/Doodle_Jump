<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg3"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:id="@+id/start_game"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:scaleType="centerInside"
        android:background="@drawable/startgame"
        android:textColor="#FFB6C1"
        android:layout_marginRight="90dp"
        android:layout_marginTop="171dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp" />



    <Button
        android:id="@+id/set_game"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:background="@drawable/options"
        android:scaleType="centerInside"
        android:textColor="#FFB6C1"
        android:layout_above="@+id/show_store"
        android:layout_alignEnd="@+id/show_store" />

    <Button
        android:id="@+id/show_store"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/showstore"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/start_game" />

